<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1>Welcome To App</h1>
    <h2>Create Your Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, :class => "form-control", :placeholder => "Full Name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password"  %>
      </div>

      <div class="actions">
        <%= f.submit "REGISTER", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
